<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/reset.css">
    <%- include ../_includes/_head %>
    <%- include ../_includes/_post-css %>
  </head>
  <body>
    <% include ../_includes/_menu %>
    <div class="body-container start-margin post-margin">
      <div class="fixed-bar">
        <a href="#top"><div class="bar-wrapper"><span class="title-bar"><%= title %></span><span class="top-icon">&#10141;</span></div></a>
      </div>
      <div class="centered">
        <div class="remember before-post">
          <a href="<%- mailtoStr() %>" class="action-btn check" data-descr="Подпишитесь на еженедельные напоминания, чтобы лучше запомнить важные факты."><span>&check;</span>Запомнить</a>
          <div class="print-ctrl">
            <% include ../_includes-ru/_post-print %>
          </div>
        </div>
        <% include ../_includes-ru/_post-header %>

        <% if (typeof draft !== "undefined" && draft) { %>
          <% include ../_includes/_post-draft %>
        <% } %>

        <%# If the post notes have single origin then show source card %>

        <% if (origin == "single") { %>
          <% include ../_includes-ru/_post-card %>
        <% } %>

        <%# if(environment == "production") { %>
        <div class="page-body">
          <%- yield %>
        </div>
        <%# } %>

        <div class="remember">
          <a href="<%- mailtoStr() %>" class="action-btn check" data-descr="Подпишитесь на еженедельные напоминания, чтобы лучше запомнить важные факты."><span>&check;</span>Запомнить</a>
          <div class="print-ctrl">
            <% include ../_includes-ru/_post-print %>
          </div>
        </div>

        <% include ../_includes-ru/_post-next %>
        <% include ../_includes-ru/_post-outro %>
        <% include ../_includes-ru/_post-chimp %>
        <script src="/ref.js"></script>
      </div>
    </div>
  </body>
</html>
