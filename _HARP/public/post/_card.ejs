    <%# EDIT THE THEME %>
    <% var path = public.post.neuroscience._data %>
    <div class="body-container start-margin">
      <div class="centered">
        <div class="fixed-wrapper">
          <div class="card-nav">
            <a href="#0" class="">&larr; previous note</a>
            <a href="#0" class="">next note &rarr;</a>
          </div>
          <div class="parent-card-rel larger">
            <a href="#0">
              <div
                class="parent-img"
                style="background:
                  linear-gradient(
                    rgba(255, 255, 255, 0.5),
                    rgba(255, 255, 255, 0.5)),
                  url('../assets/how-the-brain-is-capable-of-growing-new-cells.jpeg');
                  background-repeat: no-repeat;
                  background-size: cover;
                  background-position: center;
                ">
              </div>
              <span>How the brain is capable of growing new cells</span></a>
          </div>
        </div>

        <div class="page-body">
          <div class="card-wrapper">
            <div class="card">
              <%# yield %>
              <h1>Slug</h1>
            </div>
            <div class="card-actions">
